@page
@model RPDemoApp.Pages.Orders.ListModel
@{
    ViewData["Title"] = "Orders List";
}

<h1>List of Orders</h1>

<table class="table table-striped">
    <caption class="visually-hidden">List of Orders</caption>
    <thead class="bg-dark text-white">
        <tr>
            <th scope="col">Ordered By</th>
            <th scope="col">Ordered On</th>
            <th scope="col">Meal</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderedBy</td>
                <td>@order.Date</td>
                <td>@Model.Foods.FirstOrDefault(f=>f.Id==order.FoodId)?.Title</td>
                <td>@Model.Foods.FirstOrDefault(f => f.Id == order.FoodId)?.Price.ToString("C")</td>
                <td>@order.Quantity</td>
                <td>@order.Total.ToString("C")</td>
                <td>
                    <a asp-page="./Display" asp-route-id="@order.Id" 
                    class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>